UC12 ..> UC14 : <<include>>
UC12 ..> UC15 : <<extend>>
UC16 ..> UC2 : <<include>>
UC16 ..> UC3 : <<include>>
UC16 ..> UC4 : <<include>>
UC7 ..> UC17 : <<include>>
UC17 ..> UC18 : <<include>>
UC18 ..> UC19 : <<include>>

' System core function relationships
UC6 ..> UC24 : <<include>>
UC6 ..> UC27 : <<include>>
UC6 ..> UC28 : <<include>>
UC7 ..> UC25 : <<include>>
UC17 ..> UC26 : <<include>>
